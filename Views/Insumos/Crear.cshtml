@model Cafeteria.Models.Entities.Insumo
@{
    ViewData["Title"] = "Nuevo Insumo";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="background-color: white; border-radius: 15px;">
        <div class="card-header border-0 text-white" style="background-color: var(--cafe); border-radius: 15px 15px 0 0;">
            <h4 class="mb-0">ðŸ“¦ Registrar Nuevo Insumo</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Crear" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Nombre del Insumo</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Tortillas, Salsa Roja, Coca Cola 600ml" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Unidad de Medida</label>
                        <select asp-for="UnidadMedida" class="form-select">
                            <option value="Gramos">Gramos (g)</option>
                            <option value="Mililitros">Mililitros (ml)</option>
                            <option value="Piezas">Piezas (pza)</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Stock Inicial</label>
                        <input asp-for="StockActual" type="number" step="0.01" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Costo de Compra (Unitario)</label>
                        <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" required />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Stock de Alerta (MÃ­nimo)</label>
                        <input asp-for="StockMinimo" type="number" step="0.01" class="form-control" required />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-terracota px-5">Guardar Insumo</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>