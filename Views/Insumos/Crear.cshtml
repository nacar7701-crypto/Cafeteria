@model Cafeteria.Models.Entities.Insumo
@{
    ViewData["Title"] = "Nuevo Insumo";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0" style="background-color: white; border-radius: 15px;">
        <div class="card-header border-0 text-white" style="background-color: #4b3621; border-radius: 15px 15px 0 0;">
            <h4 class="mb-0">üì¶ Registrar Nuevo Insumo</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Crear" method="post">
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Nombre del Insumo</label>
                        <input asp-for="Nombre" class="form-control rounded-pill" placeholder="Ej: Jitomate, Tortillas, Aceite" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">Unidad de Medida</label>
                        <select asp-for="UnidadMedida" id="selectUnidad" class="form-select rounded-pill">
                            <option value="Gramos">Gramos (g)</option>
                            <option value="Mililitros">Mililitros (ml)</option>
                            <option value="Piezas">Piezas (pza)</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label fw-bold">Stock Inicial (<span class="unit-text">g</span>)</label>
                        <input asp-for="StockActual" type="number" step="0.01" class="form-control rounded-pill" required />
                    </div>
                </div>

                <hr class="my-4">

                <div class="row p-3 mb-3" style="background-color: #f8f9fa; border-radius: 15px; border: 1px dashed #4b3621;">
                    <div class="col-12">
                        <h6 class="text-muted mb-3"><i class="fas fa-calculator me-2"></i>Calculadora de costo por unidad m√≠nima</h6>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label small">Cantidad Comprada (Ej: 1000 para 1kg)</label>
                        <div class="input-group input-group-sm">
                            <input type="number" id="calcCantidad" class="form-control" value="1000" oninput="procesarCosto()">
                            <span class="input-group-text unit-text">g</span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label small">Precio Total Pagado</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">$</span>
                            <input type="number" id="calcPrecioTotal" class="form-control" step="0.01" value="20.00" oninput="procesarCosto()">
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label small fw-bold text-primary">Costo por <span class="unit-text">gramo</span> (Auto)</label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text bg-primary text-white">$</span>
                            <input asp-for="PrecioCompra" id="inputPrecioFinal" type="number" step="0.0001" class="form-control fw-bold border-primary" readonly />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-danger">Stock M√≠nimo (Alerta)</label>
                        <input asp-for="StockMinimo" type="number" step="0.01" class="form-control rounded-pill" required />
                    </div>
                </div>

                <div class="mt-4 border-top pt-3 text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 me-2">Cancelar</a>
                    <button type="submit" class="btn btn-dark rounded-pill px-5" style="background-color: #e2725b; border:none;">
                        Guardar Insumo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function procesarCosto() {
        const cantidad = parseFloat($('#calcCantidad').val()) || 1;
        const precioTotal = parseFloat($('#calcPrecioTotal').val()) || 0;
        
        // El costo unitario es lo que realmente guardamos en la DB
        const unitario = precioTotal / cantidad;
        
        // Usamos 4 decimales para mayor precisi√≥n en recetas
        $('#inputPrecioFinal').val(unitario.toFixed(4));
    }

    // Cambiar din√°micamente los textos de unidades en la vista
    $('#selectUnidad').on('change', function() {
        let unidad = $(this).val();
        let abreviatura = "g";
        
        if(unidad === "Gramos") abreviatura = "g";
        else if(unidad === "Mililitros") abreviatura = "ml";
        else if(unidad === "Piezas") abreviatura = "pza";
        
        $('.unit-text').text(abreviatura);
        procesarCosto();
    });

    // Ejecutar al cargar para inicializar valores
    $(document).ready(function() {
        procesarCosto();
    });
</script>